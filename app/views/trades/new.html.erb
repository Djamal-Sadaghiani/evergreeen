<h1>New Trade</h1>

<%= simple_form_for @trade do |f| %>
<p class="lead"> Insert Price in microcent (*10000) </p>
<%= f.input :price %>
<%= f.input :amount %>
<%= f.input :time %>
<%= f.input :investment_hypothesis %>
<%= f.input :transaction_cost %>
<%= f.hidden_field :trade_uuid, value: @trade.trade_uuid %>
<%= f.hidden_field :user_id, value: @trade.user_id %>
<%= f.hidden_field :product_id, value: @trade.product_id %>
<%= f.hidden_field :isin, value: @product.isin %>
<%= f.hidden_field :name, value: @product.name %>
<%= f.button :submit, class:"btn btn-primary"%>
<% end %>

<br>
<br>
<%= link_to 'Back', products_path, class:"btn btn-secondary" %>